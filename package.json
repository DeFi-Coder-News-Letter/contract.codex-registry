{
  "name": "codex-title",
  "version": "1.0.0",
  "description": "Contracts for Codex Protocol's Codex Title",
  "scripts": {
    "copy": "echo ../service.eel/static/contracts ../service.codex-title-registry-api/static/contracts ../web.codex-title-viewer/src/util/constants | xargs -n 1 cp -r build/contracts/CodexTitle.json",
    "migrate": "truffle migrate --network ganache && npm run copy",
    "migrate:reset": "rm -rf build && truffle migrate --reset --network ganache && npm run copy",
    "test": "truffle test --network ganache",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "eslint .",
    "lint:sol": "solium -d .",
    "compile": "truffle compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codex-protocol/contract.codex-title"
  },
  "keywords": [
    "codex"
  ],
  "author": "Codex Protocol <contact@codexprotocol.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/codex-protocol/codex-title/issues"
  },
  "homepage": "https://github.com/codex-protocol/contract.codex-title",
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "solidity-coverage": "^0.4.15",
    "solium": "^1.1.6"
  },
  "dependencies": {
    "truffle": "^4.1.5",
    "zeppelin-solidity": "^1.8.0"
  }
}
