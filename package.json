    "lint": "eslint test && solhint contracts/*.sol",
    "compile": "truffle compile",
    "ganache": "truffle migrate --network development"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codex-protocol/contract.codex-title"
  },
  "keywords": [
    "codex"
  ],
